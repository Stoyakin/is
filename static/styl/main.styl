html {
	-webkit-box-sizing border-box;
	box-sizing border-box;
}

*,
*::after,
*::before {
	-webkit-box-sizing inherit;
	box-sizing inherit;
}

body,
html {
	width 100%;
}

h1, h2, h3, h4, p, a {
	margin: 0;
	padding: 0;
}

a {
	text-decoration: none;
}

ul, li {
	list-style: none;
}

body {
	font-family: 'Proxima Nova';
	font-weight: normal;
	font-size: 18px;
	line-height: 30px;
	color: $main-text;
}

.wrapper {
	max-width: 1170px;
	margin: 0 auto;
}
