.search-page {
	margin-bottom 60px;

	&__form {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		width 100%;
		margin-bottom: 10px;

		.input {
			width 80%;
		}
	}

	&__count {
		margin-bottom: 40px;
	}

	&__btn {
		padding-right: 60px;
		background-image: url('data:image/png;base64,');
		background-repeat: no-repeat;
		background-position: center right 20px;

		&:after {
			display: none;
		}
	}

	&__list {
		padding: 0;

		list-style: none;

		margin-bottom: 30px;
		margin-top 0;

		counter-reset: number;
	}

	&__item {
		position: relative;

		margin-bottom: 20px;
		padding-left: 30px;

		color: $title-color;

		font-size: 18px;
		font-weight: normal;
		line-height: 30px;

		&:last-child {
			margin-bottom 0;
		}

		&:before {
			position: absolute;
			left: 0;

			content: counters(number, ".") ".";
			counter-increment: number;

			color: $list;

			font-size: 18px;
			line-height: 30px;
			font-weight: 800;
		}
	}

	&__link {
		text-decoration: none;
		text-transform: uppercase;
		color: $green;
		border-bottom: 1px solid $green;
		transition: all 0.5s ease-out;
		font-size: 18px;
		line-height: 23px;
		font-weight: normal;

		display: inline-block;

		&:hover {
			border-color: transparent;
		}
	}
}

@media only screen and (max-width: 1023px) {
	.search-page {
		&__btn {
			padding-right: 60px;
		}
	}
}

@media only screen and (max-width: 767px) {
	.search-page {
		&__form {
			flex-direction: column;

			.input {
				margin-bottom: 20px;
				width: auto;
			}
		}
	}
}
