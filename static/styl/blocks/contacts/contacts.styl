.contacts {
	overflow: hidden;

	&__container {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		border-top: 1px solid $title-color-hover;
		max-width: 867px;
		padding-top: 40px;
	}

	&__item {
		width: 261px;
		margin-right: 42px;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		margin-bottom: 57px;
		color: $service-text-color;

		&:nth-child(3n+3) {
			margin-right: 0;
		}
	}

	&__subtitle {
		font-size: 24px;
		line-height: 26px;
		font-weight: 800;
		color: $green;
		margin-bottom: 20px;
	}

	&__link-tel {
		font-size: 18px;
		line-height: 23px;
		font-weight: normal;
		text-decoration: none;
		color: $service-text-color;
	}

	&__link-mail {
		text-decoration: none;

		color: $green;
		border-bottom: 1px solid $green;
		transition: all 0.5s ease-out;
		font-size: 18px;
		line-height: 23px;
		font-weight: normal;

		display: inline-block;

		&:hover {
			border-color: transparent;
		}
	}

	&__schema {
		padding-top: 60px;
		padding-bottom: 60px;
		position: relative;

		&:before {
			content: '';
			position: absolute;
			top: 0;
			left: 50%;
			-webkit-transform: translateX(-50%);
			transform: translateX(-50%);
			background-color: #f5f5f5;
			width: 100vw;
			height: 100%;
			background-color: $specialize-bg;
			z-index: -1;
		}
	}

	&__map {
		width: 100%;
		height: 500px;
		margin-bottom: 40px;
	}

	&__text {
		max-width: 867px;
	}
}