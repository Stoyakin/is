.reviews {
	margin-bottom: 90px;

	&__title {
		display: flex;
		flex-direction: row;
		margin-bottom: 50px;

		h2:not([class]) {
			margin-bottom: 0;
			margin-right: 40px;
		}
	}

	&__list {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	&__item {
		width: calc(100%/3 - 21px)

		&:nth-child(2) {
			margin-top: 50px;
		}
	}

	&__href {
		display: inline-block;
		background-color: $bg-color;
		padding: 30px;
		transition: background .5s;

		&:hover {
			background-color: $green;
		}
	}
}
