.contact-us {
	padding-bottom: 100px;

	&__container {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		margin-bottom: 90px;
	}

	&__form {
		display: flex;
		flex-direction: column;
		position: relative;
		padding: 40px 0;
		width: calc(50% - 21px - 100px);
		box-sizing: border-box;

		.input {
			margin-bottom: 50px;
		}

		.select {
			margin-bottom: 50px;
		}

		.textarea {
			margin-bottom: 50px;
		}

		.pseudocheckbox {
			margin-bottom: 50px;
		}

		&:before {
			content: '';
			position: absolute;
			top:0;
			left: 50px;
			width: 100%;
			height: 100%;
			background-color: $bg-color;
			z-index: -1;
		}
	}

	&__btn {
		margin-left: -25px;
		font-size: 18px;
		line-height: 30px;
		font-weight: 800;
		color: $about-pluses-text;
		position: relative;
		display inline-block

		&:after {
			content: '';
			display: inline-block;
			width: 19px;
			height: 13px;
			background-image: url('../i/arrow-right--black.png');
			position: relative;
			margin-left: 11px;
			line-height: 33px;
		}
	}

	&__info {
		width: calc(50% - 21px);
		display: flex;
		flex-direction: column;
		align-self: center;
	}

	&__info-elem {
		display: flex;
		flex-direction: column;
		margin-bottom: 45px;

		&:last-child {
			margin-bottom: 0;
		}
	}

	&__info-title {
		font-size: 18px;
		line-height: 30px;
		color: $main-text;
		font-weight: normal;
	}

	&__info-text {
		display: flex;
		flex-direction: column;

		& > * {
			font-size: 20px;;
			line-height: 32px;
			font-weight: 800;
			color: $title-color;
		}

		&--email {
			a {
				align-self: flex-start;
				border-bottom: 1px solid $title-color-hover;
				transition: border-color .5s;

				&:hover {
					border-color: transparent;
				}
			}
		}
	}

	&__map {
		width: 100%;
		height: 500px;
	}
}
