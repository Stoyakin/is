.developers {
	text-align: left;

	align-self: center;
	align-self: flex-end;
	left: -75px;
	position: relative;

	&__href {
		position: relative;

		display: inline-block;

		max-width: 75px;
		padding-left: 85px;

		transition: color 0.5s;
		text-decoration: none;
		letter-spacing: 1.6px;
		text-transform: uppercase;

		color: $main-text;

		font-family: Verdana, Geneva, sans-serif;
		font-size: 9px;
		line-height: 14px;

		&:hover {
			.developers__dextra {
				background-color: $yellow;
			}
		}
	}


	&__dextra {
		position: absolute;
		top: 50%;
		left: 0;

		margin-right: 10px;
		padding-right: 6px;
		padding-left: 6px;

		transition: background-color 0.4s;
		transform: translateY(-50%);

		color: $white;
		border-radius: 3px;
		background-color: $green;

		font-family: Arial, Helvetica, sans-serif;
		font-size: 12px;
		font-weight: 900;
		line-height: 21px;
	}
}

@media only screen and (max-width: 767px) {
	.developers {
		left: 0;

		align-self: flex-start;
	}
}
