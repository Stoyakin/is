.fancybox-bg {
	background-color: $green;
}

.thanks {
	font-family: 'Proxima Nova';
	max-width: 970px;
	width: 100%;
	text-align: center;
	padding: 70px 20px;

	&__title {
		font-size: 48px;
		line-height: 48px;
		color: $title-color;
		font-weight: 800;
		margin-bottom: 50px;
		display: inline-block;
	}

	&__text {
		font-size: 18px;
		line-height: 30px;
		color: $main-text;
		margin-bottom: 60px;
	}

	&__phones {
		font-size: 18px;
		line-height: 30px;
		color: $main-text;

		a {
			color: $service-text-color;
			margin-right: 20px;

			&:last-child {
				margin-right: 0;
			}
		}
	}
}

@media only screen and (max-width: 767px) {
	.thanks {
		padding: 30px 0;

		&__title {
			font-size: 32px;
			line-height: 34px;
			margin-bottom: 32px;
		}

		&__phones-line {
			display: flex;
			flex-direction: column;

			a {
				margin-right: 0;
			}
		}
	}
}