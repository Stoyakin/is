mixin reviews
	section.reviews
		.wrapper
			.reviews__title
				h2 Отзывы
				a(href="#").more Все проекты
			ul.reviews__list
				li.reviews__item
					a(href="./img/reviews-1.jpg", data-fancybox).reviews__href
						img(src="./img/reviews-1.jpg", alt="")

				li.reviews__item
					a(href="./img/reviews-2.jpg", data-fancybox).reviews__href
						img(src="./img/reviews-2.jpg", alt="")

				li.reviews__item
					a(href="./img/reviews-3.jpg", data-fancybox).reviews__href
						img(src="./img/reviews-3.jpg", alt="")
